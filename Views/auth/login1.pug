extends ../layouts/common.pug

block content

     
    h1 Login

    if errors
        each error in errors
            .alert.alert-danger=error

    form(action="/auth/login" ,method="POST") 

        .form-group(class="col-md-8 col-12 col-lg-6 m-2")
            label(class="m-2", for="username") Username:  
            input#email(type="text", name="username", class="form-control",value= values? values.username: "" )

        .form-group(class="col-md-8 col-12 col-lg-6 m-2 ")
            label(class="m-2", for="password") Password:  
            input#password(type="password", name="password", class="form-control",value=values? values.password:"" )

        button(class="btn btn-primary m-4") Login
        
    